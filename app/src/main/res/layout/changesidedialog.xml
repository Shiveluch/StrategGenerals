<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/yashik"
    android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/mess"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/font2"
            android:gravity="center"
            android:shadowColor="#000000"
            android:shadowDx="0.1"
            android:shadowDy="0.1"
            android:shadowRadius="0.1"
            android:text="TextView"
            android:textColor="#000000"
            android:textSize="24sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal|center_vertical"
            android:orientation="vertical">

            <Button
                android:id="@+id/yellow"

                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/yellowback"
                android:fontFamily="@font/font2"
                android:text="Единство"
                android:textColor="#000000"
                android:textSize="16sp" />

            <Button
                android:id="@+id/blue"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/blueback"
                android:fontFamily="@font/font2"
                android:text="КОАЛИЦИЯ"
                android:textSize="16sp" />

            <Button
                android:id="@+id/neutral"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/greyback"
                android:fontFamily="@font/font2"
                android:text="СОЮЗ"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/dismiss"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|center_horizontal|center_vertical"
                    android:layout_weight="1"
                    android:gravity="center|center_horizontal|center_vertical"
                    android:text="ОТМЕНИТЬ"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    app:backgroundTint="#000000" />

                <Button
                    android:id="@+id/doneutral"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="СДЕЛАТЬ\nНЕЙТРАЛЬНОЙ"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    app:backgroundTint="#000000" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>